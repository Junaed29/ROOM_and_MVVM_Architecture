<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/text_view_priority_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="1"
            style="@style/TextAppearance.AppCompat.Headline"
            />

        <TextView
            android:id="@+id/text_view_title_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:maxLines="1"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_toStartOf="@id/text_view_priority_Id"
            android:layout_toLeftOf="@id/text_view_priority_Id"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/text_view_description_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title_Id"
            android:text="Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>